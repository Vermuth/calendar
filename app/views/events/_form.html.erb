<%= form_for @event do |f| %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :event_time %><br />
      <%= f.text_field :event_time , :class => "datepicker" %>
    </p>
    <p>
      <%= f.label :event_end_time %> <br>
      <%= f.text_field :event_end_time, :class => "datepicker" %>
    </p>
    <p>
      <%= f.label :every_day %>
      <%= f.select :every_day, options_for_select([["No", nil], ["1 Day", 1], ["2 Day", 2], ["3 Day",3], ["4 Day", 4], ["5 Day", 5], ["6 Day",6]]) %>
      <%= f.label :every_week %>
      <%= f.select :every_week, options_for_select([["No",nil], ["1 Week", 1], ["2 Week", 2], ["3 Week", 3], ["4 Week", 4]]) %>
    </p>
    <p>
      <%= f.label :every_month %>
      <%= f.select :every_month, options_for_select([["No", nil], ["1 Month", 1], ["2 Month", 2], ["3 Month", 3], ["4 Month", 4], ["5 Month", 5], ["6 Month", 6]]) %>
      <%= f.label :every_year %>
      <%= f.select :every_year, options_for_select([["No",nil], ["1 year",1], ["2 year",2], ["3 year",3], ["4 year",4]])%>
    </p>
    <p>
      <%= f.label :see_all %><br>
      <%= f.select  :see_all, options_for_select([[ "true", 1 ], ["false", 0]]) %>
    </p>
    <p><%= f.submit "Submit" %></p>
<% end %>